<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".GameOverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/game_over"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#94a7b1"
        >

        <TextView
            android:id="@+id/displayScoreTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/arbutus"
            android:text="Score = "
            android:textColor="#FF0057"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/prizeBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#2f1431"
            android:fontFamily="@font/croissant_one"
            android:padding="10dp"
            android:text="Play Again"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="23sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/aboutUsBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#173930"
            android:fontFamily="@font/croissant_one"
            android:padding="10dp"
            android:text="About Us"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="23sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>